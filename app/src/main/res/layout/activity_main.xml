<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#B0E0E6"
    tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps!"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifystreamerbutton"
        android:layout_below="@+id/textView"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:onClick="spotifyStreamerClicked"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresAppButton"
        android:onClick="scoresAppClicked"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/spotifystreamerbutton"
        android:layout_alignLeft="@+id/spotifystreamerbutton"
        android:layout_alignStart="@+id/spotifystreamerbutton"
        android:layout_alignRight="@+id/spotifystreamerbutton"
        android:layout_alignEnd="@+id/spotifystreamerbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryAppButton"
        android:onClick="libraryAppClicked"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/scoresAppButton"
        android:layout_alignLeft="@+id/scoresAppButton"
        android:layout_alignStart="@+id/scoresAppButton"
        android:layout_alignRight="@+id/scoresAppButton"
        android:layout_alignEnd="@+id/scoresAppButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildItBiggerButton"
        android:onClick="buildItBiggerClicked"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/libraryAppButton"
        android:layout_alignRight="@+id/libraryAppButton"
        android:layout_alignEnd="@+id/libraryAppButton"
        android:layout_alignLeft="@+id/libraryAppButton"
        android:layout_alignStart="@+id/libraryAppButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzReaderButton"
        android:onClick="xyzReaderClicked"
        android:background="#F08C35"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/buildItBiggerButton"
        android:layout_alignLeft="@+id/buildItBiggerButton"
        android:layout_alignStart="@+id/buildItBiggerButton"
        android:layout_alignRight="@+id/buildItBiggerButton"
        android:layout_alignEnd="@+id/buildItBiggerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstoneButton"
        android:onClick="spotifyStreamerClicked"
        android:background="#FF00"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/xyzReaderButton"
        android:layout_alignLeft="@+id/xyzReaderButton"
        android:layout_alignStart="@+id/xyzReaderButton"
        android:layout_alignRight="@+id/xyzReaderButton"
        android:layout_alignEnd="@+id/xyzReaderButton" />


</RelativeLayout>
